<h1>Tasks</h1>
<p><a href='/task/new'>新規タスク</a></p>
<table>
    <thead>
      <tr>
      <th><%= sort_link(@q, :id, 'ID') %></th>
      <th><%= sort_link(@q, :name, 'NAME') %></th>
      <th><%= sort_link(@q, :status, 'STATUS') %></th>
      <th><%= sort_link(@q, :duedate, 'DUE') %></th>
      <th><%= sort_link(@q, :label, 'LABEL') %></th>
      <th><%= sort_link(@q, :created_at, 'CREATED_AT') %></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |t| %>
        <tr>
        <td><%=t.id %></td>
        <td><%=t.name %></td>
        <td><%=t.status %></td>
        <td><%=t.duedate %></td>
        <td><%=t.label %></td>
        <td><%=t.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= link_to 'Delete', task_path(t), data: { turbo_method: 'delete', turbo_confirm: '本当に消しますか？' } %></td>
        </tr>
      <% end %>
    </tbody>
</table>
